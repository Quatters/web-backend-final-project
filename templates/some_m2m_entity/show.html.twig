{% extends 'base.html.twig' %}

{% block title %}SomeM2MEntity{% endblock %}

{% block body %}
    <h1>SomeM2MEntity</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ some_m2m_entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ some_m2m_entity.name }}</td>
            </tr>
            <tr>
                <th>Big entities</th>
                <td>
                    {% for big in some_m2m_entity.getSomeBigEntities() %}
                        {{ big }}
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_some_m2m_entity_index') }}">back to list</a>

    <a href="{{ path('app_some_m2m_entity_edit', {'id': some_m2m_entity.id}) }}">edit</a>

    {{ include('some_m2m_entity/_delete_form.html.twig') }}
{% endblock %}
