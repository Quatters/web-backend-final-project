{% extends 'base.html.twig' %}

{% block title %}SomeOption index{% endblock %}

{% block body %}
    <h1>SomeOption index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for some_option in some_options %}
            <tr>
                <td>{{ some_option.id }}</td>
                <td>{{ some_option.name }}</td>
                <td>{{ some_option.type }}</td>
                <td>
                    <a href="{{ path('app_some_option_edit', {'id': some_option.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_some_option_new') }}">Create new</a>
{% endblock %}
