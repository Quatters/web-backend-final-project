{% extends 'base.html.twig' %}

{% block title %}SomeBigEntity index{% endblock %}

{% block body %}
    <h1>SomeBigEntity index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CreatedAt</th>
                <th>Description</th>
                <th>User</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for some_big_entity in some_big_entities %}
            <tr>
                <td>{{ some_big_entity.id }}</td>
                <td>{{ some_big_entity.createdAt ? some_big_entity.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ some_big_entity.description }}</td>
                <td>{{ some_big_entity.user }}</td>
                <td>
                    <a href="{{ path('app_some_big_entity_show', {'id': some_big_entity.id}) }}">show</a>
                    <a href="{{ path('app_some_big_entity_edit', {'id': some_big_entity.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_some_big_entity_new') }}">Create new</a>
{% endblock %}
